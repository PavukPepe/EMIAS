<UserControl x:Class="EMIAS.Cards.DoctorCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EMIAS.Cards"
             Height="90" Width="125"
             Margin="10 0 0 0">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <UserControl xmlns:svgc="http://sharpvectors.codeplex.com/svgc/" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30">
            <svgc:SvgViewbox Source="/Icons/glasses.svg"/>
        </UserControl>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Text="Офтальмолог"></TextBlock>
    </Grid>
</UserControl>
